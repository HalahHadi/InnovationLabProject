@{
    Layout = null;
}

<!DOCTYPE html>
<html dir="rtl" lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - معمل الابتكارات</title>

    <!-- Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="~/css/site_bootstrap.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- ✅ Navbar المعدّل -->
    <nav class="navbar navbar-expand-lg bg-white shadow-sm">
        <div class="container d-flex align-items-center justify-content-between position-relative">

            <!-- Logo -->
            <a class="navbar-brand d-flex align-items-center gap-2" href="/Home/Index">
                <div class="logo-icon">
                    <img src="~/Images/limg.jpg" alt="شعار معمل الابتكارات" style="height: 50px;">
                </div>
            </a>

            <!-- روابط النافبار -->

            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <div class="navbar-nav d-flex align-items-center gap-3">
                    <a class="nav-link" href="/Home/Index" onclick="showPage('home')">الرئيسية</a>
                    <a class="nav-link" href="/Home/Index" onclick="showPage('home'); setTimeout(() => scrollToSection('services'), 100)">الخدمات</a>
                    <a class="nav-link" href="/Home/Index" onclick="showPage('home'); setTimeout(() => scrollToSection('devices'), 100)">الأجهزة</a>
                    <a class="nav-link" href="/Home/Index" onclick="showPage('home'); setTimeout(() => scrollToSection('about'), 100)">عن المعمل</a>
                    <a class="nav-link" href="/Home/FAQ">الأسئلة الشائعة</a>
                    <a class="nav-link" href="/Home/Index#contact" onclick="showPage('contact')">تواصـل</a>
                </div>
            </div>

            <!-- زر الهامبرجر للجوال -->
            <button class="navbar-toggler ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <i class="fas fa-bars"></i>
            </button>

            <!-- زر التسجيل -->
            <div class="auth-buttons position-absolute start-0 d-flex align-items-center">
                <a class="btn btn-primary d-none d-lg-block" href="/Auth/Login">
                    <i class="fas fa-user"></i> تسجيل
                </a>
                <a class="btn btn-primary btn-sm d-block d-lg-none ms-2" href="/Auth/Login">
                    <i class="fas fa-user"></i> تسجيل
                </a>
            </div>
        </div>
    </nav>

    <!-- 👇 هذا هو الجسم الأساسي للصفحة -->
    @RenderBody()

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script_bootstrap.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
