@model WepApp2.Models.VisitsDetail


<!-- تضمين ملف CSS الخاص بصفحة الخدمات -->
@section Styles {
    <link href="~/css/services.css" rel="stylesheet" />
}

<!-- عنوان نموذج إضافة زيارة جديدة -->
<h2 class="text-center mb-4">
    @(Model.VisitDetailsId == 0 ? "إضافة نوع زيارة جديدة" : "تعديل نوع الزيارة")
</h2>

<!-- فورم إضافة زيارة جديدة   -->

<form asp-controller="VisitsDetails"
      asp-action="AddOrEdit"
      method="post"
      onsubmit="event.preventDefault(); submitVisitsDetailsForm();">
    @Html.AntiForgeryToken()
    <input asp-for="VisitDetailsId" type="hidden" />

    <div class="modal-body">
        <div class="mb-3">
            <label class="form-label">نوع الزيارة</label>
            <input asp-for="VisitType" class="form-control" />
        </div>

        <!-- Error message -->
        <div id="visitErrorMessage"
             class="assign-error-message"
             style="display:none; width:100%; box-sizing:border-box;">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="#DC2626">
                <path d="M11 15h2v2h-2zm0-8h2v6h-2zm.99 15c-5.52 0-10-4.48-10-10S6.47 2
                         12 2s10 4.48 10 10-4.48 10-10 10zm0-18c-4.42
                         0-8 3.58-8 8s3.58 8 8 8 8-3.58 8-8-3.58-8-8-8z" />
            </svg>
            <span>الرجاء إدخال نوع الزيارة.</span>
        </div>
    </div>

    <!-- أزرار النموذج (إضافة وإلغاء) -->
    <div class="text-end">
        <button type="submit" class="btn btn-success">
            @(Model.VisitDetailsId == 0 ? "إضافة" : "حفظ")
        </button>
        <button type="button" class="btn btn-secondary" onclick="closeVisitsDetailsForm()">إلغاء</button>
    </div>
</form>
